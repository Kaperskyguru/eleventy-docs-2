---
layout: layouts/base.html
---

<div class="mx-auto h-full px-8 xl:px-0" style="max-width: 1320px">
  <!-- Header Nav -->
  <header
    class="fixed flex justify-center w-full top-0 left-0 mb-[80px] z-50 px-4"
  >
    <nav
      class="flex w-full items-center justify-between bg-primary text-white p-3 border-solid border-tertiary border-b"
      style="max-width: 1320px"
    >
      <!-- Logo -->
      <div class="w-32">Logo</div>
      <!-- Search -->
      <div
        class="flex-1 bg-primary flex justify-center mx-5 bg-tertiary rounded-md"
      >
        <input
          type="text"
          class="px-5 hidden lg:flex py-2 w-full bg-tertiary border-solid rounded-md border-tertiary border outline-secondary outline-1 ring-0"
          placeholder="Search deposits docs"
        />
      </div>
      <div class="justify-between gap-10 items-center hidden lg:flex">
        <div>v0.0.0</div>
        <div>Icon</div>
        <div><a href="https://github.com">Github</a></div>
        <div>
          <button class="bg-secondary px-4 py-2 rounded-md text-[#212934]">
            Submit a request
          </button>
        </div>
        <div>
          <button
            class="border-secondary border border-outline px-4 py-2 rounded-md text-secondary"
          >
            Sign in
          </button>
        </div>
      </div>

      <div class="lg:hidden block" onclick="openSidebar()">
        <svg
          focusable="false"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M3 5H20.359M3 18.186H20.359M3 11.592H20.359"
            stroke="currentcolor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          ></path>
        </svg>
      </div>
    </nav>
  </header>

  <!-- Sidebar -->
  <div class="flex pt-20 relative">
    <aside
      id="sidebar"
      class="w-full hidden w-full lg:block top-[65px] sticky overflow-y-auto border-r-2 border-solid border-tertiary"
      style="max-width: 250px; height: calc(100vh - 80px); min-width: 280px"
    >
      <nav class="px-3">
        <ul id="mainmenu" class="text-white rounded-lg text-lg">
          <li>
            <a
              href="#"
              class="flex items-center gap-3 px-2 py-3 hover:bg-tertiary rounded-lg"
            >
              <div>
                <img
                  src="https://docs.deposits.dev/assets/svgs/sidebar/docs_home.svg"
                  alt=""
                  srcset=""
                />
              </div>
              <p>Docs Home</p>
            </a>
          </li>

          <li>
            <a
              href="#"
              class="flex items-center gap-3 px-2 py-3 hover:bg-tertiary rounded-lg"
            >
              <div>
                <img
                  src="https://docs.deposits.dev/assets/svgs/sidebar/api_reference.svg"
                  alt=""
                  srcset=""
                />
              </div>
              <p>API References</p>
            </a>
          </li>

          <li>
            <a
              href="#"
              class="flex items-center gap-3 px-2 py-3 hover:bg-tertiary rounded-lg"
            >
              <div>
                <img
                  src="https://docs.deposits.dev/assets/svgs/sidebar/ui_kit.svg"
                  alt=""
                  srcset=""
                />
              </div>
              <p>UI Kit</p>
            </a>
          </li>

          <li>
            <a
              href="#"
              class="flex items-center gap-3 px-2 py-3 hover:bg-tertiary rounded-lg"
            >
              <div>
                <img
                  src="https://docs.deposits.dev/assets/svgs/sidebar/recipes.svg"
                  alt=""
                  srcset=""
                />
              </div>
              <p>Guides</p>
            </a>
          </li>

          <li>
            <a
              href="#"
              class="flex items-center gap-3 px-2 py-3 hover:bg-tertiary rounded-lg"
            >
              <div>
                <img
                  src="https://docs.deposits.dev/assets/svgs/sidebar/references.svg"
                  alt=""
                  srcset=""
                />
              </div>
              <p>Glossary</p>
            </a>
          </li>
        </ul>
      </nav>

      <div class="my-8 py-2 text-white">
        <h2 class="uppercase font-bold text-base">Getting Started</h2>
        <div class="flex flex-col text-base">
          {%- for doc in collections.getting_started -%}

          <a href="{{ doc.url }}" class="py-1">{{ doc.data.title }}</a>

          {%- endfor -%}

          <a href="#" class="py-1">Environments</a>
          <a href="#" class="py-1">Authentication</a>
          <a href="#" class="py-1">Testing</a>
          <a href="#" class="py-1">Errors</a>
        </div>
      </div>

      <div class="my-8 text-white">
        <h2 class="uppercase py-2 font-bold text-base">Services</h2>
        <div class="flex flex-col text-base">
          {%- for doc in collections.services -%}
          <a href="{{ doc.url }}" class="py-1">{{ doc.data.title }}</a>
          {%- endfor -%}
          <a href="#" class="py-1">Webhooks</a>
        </div>
      </div>

      <div class="my-8 text-white">
        <h2 class="uppercase py-2 font-bold text-base">Libraries & SDKs</h2>
        <div class="flex flex-col text-base">
          <a href="#" class="py-1">E-Commerce</a>
          <a href="#" class="py-1">One-Click Pay</a>
          <a href="#" class="py-1">Payouts</a>
          <a href="#" class="py-1">Balance</a>
        </div>
      </div>

      <div class="text-white">
        <h2 class="uppercase py-2 font-bold text-base">Use Cases</h2>
        <div class="flex flex-col text-base">
          <a href="#" class="py-1">Overview</a>
          <a href="#" class="py-1">Digital Banking</a>
          <a href="#" class="py-1">Invoice Management System</a>
          <a href="#" class="py-1">Donations Engine</a>
          <a href="#" class="py-1">International Remittance</a>
          <a href="#" class="py-1">Challenger Bank</a>
        </div>
      </div>
    </aside>

    {{ content | safe }}
  </div>
</div>
